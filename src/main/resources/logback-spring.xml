<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>

    <!-- Define log file paths explicitly -->
    <property name="LOG_DIR" value="logs"/>
    <property name="APP_LOG_FILE" value="${LOG_DIR}/Application.log"/>
    <property name="PACKAGES_LOG_FILE" value="${LOG_DIR}/packages.log"/>

    <!-- Define log patterns -->
    <property name="APP_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n%rEx"/>
    <property name="PACKAGES_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n%rEx"/>

    <!-- Appender to log to Application.log -->
    <appender name="applicationFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APP_LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${APP_LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${APP_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Appender to log to packages.log -->
    <appender name="packagesFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${PACKAGES_LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${PACKAGES_LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${PACKAGES_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Appender to log to console -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${APP_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="applicationFile"/>
    </root>

    <!-- Logger for DispatcherServlet, directing to packages.log -->
    <logger name="org.springframework.web.servlet.DispatcherServlet" level="INFO">
        <appender-ref ref="packagesFile"/>
    </logger>

    <!-- Logger for all classes under com.example.eventmanagementsystem, directing to packages.log -->
    <logger name="com.example.eventmanagementsystem" level="INFO">
        <appender-ref ref="packagesFile"/>
    </logger>

</configuration>
